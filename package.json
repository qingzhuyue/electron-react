{
  "name": "vite-electron-react",
  "private": true,
  "version": "0.0.4",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "version": "npm-version patch && npm run build",
    "build": "rimraf dist-electron && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "start": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build && electron-builder . --overwrite",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-forge publish"
  },
  "build": {
    "appId": "ink.bennent_g.qingzhuyue",
    "directories": {
      "output": "release"
    },
    "productName": "青竹悦",
    "files": [],
    "publish": {
      "provider": "generic",
      "url": "http://8.130.44.166/"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/vite.svg",
      "uninstallerIcon": "./public/vite.svg",
      "installerHeaderIcon": "./public/vite.svg",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "青竹悦"
    },
    "mac": {
      "icon": "./icon.iconset"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/vite.svg"
    }
  },
  "dependencies": {
    "electron-updater": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.4.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "react-tabs": "^6.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  }
}
